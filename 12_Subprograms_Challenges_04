def Menu():
  loopAgain = 4
  while loopAgain != 4:
    print("Press 1 for Creative")
    print("Press 2 for Survival")
    print("Press 3 for Hardcore")
    print("Press 4 for Adventure")
    print("Press 5 to exit")
    
choice = int(input("Enter 1, 2, 3, 4 or 5 to exit "))

def creative():
  print("Creative selected\n")

def survival():
  print("Survival selected\n")

def hardcore():
  print("Hardcore selected\n")

def adventure():
  print("Adventure selected\n")
    
      
if choice == 1:
    creative()
      
elif choice == 2:
    survival()
    
elif choice == 3:
    hardcore()
    
elif choice == 4:
    adventure()
      
elif choice == 5:
    print("exiting...")
      
elif choice >=6:
    print("Invalid choice\n")
    Menu()

      
Menu()
