def Menu():
    print("Press 0 to exit")
    print("Press 1 for timetables")
    choice = int(input("Enter 1 or 0 "))
    if choice == 0:
        exit()
        Menu()

    elif choice == 1:
        timetables()

def exit():
  print("bye\n")
  
def timetables():
    num1 = int(input("enter a number between 1 and 12 "))
    for i in range(1,13):
        print(i , "x ", num1, "= ", i*num1)
    
Menu()
